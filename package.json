{
  "name": "@nanogiants/designsystem-react",
  "version": "0.1.0",
  "main": "dist/bundle/js/index.js",
  "module": "dist/bundle/esm/index.js",
  "types": "dist/bundle/js/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c",
    "storybook": "start-storybook -p 6006 -s ./src/lib/assets --docs",
    "build:storybook": "build-storybook -s ./src/lib/assets",
    "lint": "eslint ./src/lib/**/*.{ts,tsx}",
    "lint:fix": "npm run lint -- --fix",
    "postversion": "node ./bumpDistVersion && git add . && git commit -m \"Update version to $npm_package_version\""
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-url": "^6.0.0",
    "@storybook/addon-actions": "6.1.21",
    "@storybook/addon-essentials": "6.1.21",
    "@storybook/addon-links": "6.1.21",
    "@storybook/react": "6.1.21",
    "@svgr/rollup": "^5.5.0",
    "@svgr/webpack": "^5.5.0",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@types/react": "^16.9.12",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.21.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.2.3",
    "identity-obj-proxy": "^3.0.0",
    "lint-staged": "^10.5.4",
    "node-sass": "^5.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rollup": "^2.41.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "styled-components": "^4.3.2",
    "typescript": "^4.0.3"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/lib/**/*.{ts,tsx}": [
      "eslint",
      "git add"
    ]
  }
}
